@model IEnumerable<CookingSite.Models.Favorite>
@using Microsoft.AspNet.Identity;
<!DOCTYPE HTML>
<html>
<head>
   
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>

    <div class="flex-container">
        <div class="flex-item">Term 1</div>
        <div class="flex-item">Term 2</div>
        <div class="flex-item">Term 3</div>
        <div class="flex-item">Term 4</div>
    </div>

</body>
</html>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Term.TermName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    if (item.AspNetUser.Email == @HttpContext.Current.User.Identity.Name)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Term.TermDef )
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.FavoriteID }) |
                @Html.ActionLink("Details", "Details", new { id = item.FavoriteID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.FavoriteID })
            </td>
        </tr>
    }

}

</table>
