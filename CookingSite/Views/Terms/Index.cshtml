<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TermName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TermDef)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TermInfo)
        </th>
