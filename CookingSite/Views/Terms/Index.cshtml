@model IEnumerable<CookingSite.Models.Term>
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<script>

    $(function () {
        var $inputText = $('#inputText')

        $('#sendFile').on('click', function () {
            alert('creating object')
            var postFile = {
                userInput: $inputText.val(),
            };
            $.ajax({
                type: 'POST',
                url: "@Url.Action("GetKey")",
                data: JSON.stringify(postFile),
                contentType: "application/json; charset=utf-8",
                success: function (data) { alert(data); window.location.reload(); },
                error: function () {
                    alert("error saving input");
                }
            });
        });
    });
</script>


<body>

    @*Recipe Entry Field*@
    <textarea id="inputText" class='autoExpand' rows='3' data-min-rows='3' title='Paste Recipe Here' placeholder="Paste Recipe Here"></textarea>

    @*FIND TERMS Button*@
    <div class="container">
        <a id="sendFile" class="waves-effect waves-light btn btn-large"><i class="material-icons right">search</i>FIND TERMS</a>
    </div>
    @Html.Partial("View");

   

</body>
